@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <div class="main">
        <div class="top-row px-4 auth">
            <LoginDisplay/>
        </div>

        <div class="content px-4">
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <h1>Authentication Failure!</h1>
                    <p>You're not signed in.</p>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>